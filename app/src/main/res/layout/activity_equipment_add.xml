<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/infotrak_yellow"
    tools:context="au.com.infotrak.infotrakmobile.EquipmentAddActivity"
    android:id="@+id/layout">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Customer"
        android:id="@+id/autoCustomer"/>

    <EditText
        android:id="@+id/txtJobsite"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/autoCustomer"
        android:hint="Jobsite" />

    <EditText
        android:id="@+id/txtModel"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtJobsite"
        android:hint="Model" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtModel"
        android:ellipsize="start"
        android:selectAllOnFocus="true"
        android:id="@+id/editSerialNo"
        android:hint="Serial Number" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editSerialNo"
        android:ellipsize="start"
        android:selectAllOnFocus="true"
        android:id="@+id/editUnitNo"
        android:hint="Unit Number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnAddNewEquip"
        android:layout_below="@+id/editUnitNo"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/abc_search_url_text_normal"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_note"
        android:textColor="#FF0000"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/btnAddNewEquip"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_setup_rope_shovels"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
