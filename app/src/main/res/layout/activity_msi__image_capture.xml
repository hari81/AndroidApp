<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="550dp"
    android:layout_height="390dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Image title" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etMSIImageCapture_imageTitle"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="128" />

        <TextView
android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Image comment" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etMSIImageCapture_imageComment"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="256" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:weightSum="3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_rotate_left_black_24dp"
                    android:id="@+id/img_MSI_ImageCapture_RotateCCW"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"></LinearLayout>

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_rotate_right_black_24dp"
                    android:id="@+id/img_MSI_ImageCapture_RotateCW"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:id="@+id/img_MSI_ImageCapture_photo1"
                android:src="@drawable/add_image_box"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:minWidth="120dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/arrow_right_red"
                    style="@style/TTbutton1"
                    android:id="@+id/btnMSIImageCapture_delete"
                    android:text="Discard" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:minWidth="120dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/arrow_right_red"
                    style="@style/TTbutton1"
                    android:id="@+id/btnMSIImageCapture_save"
                    android:text="Save" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:minWidth="120dp"
                    android:background="@drawable/arrow_right_red"
                    style="@style/TTbutton1"
                    android:id="@+id/btnMSIImageCapture_close"
                    android:text="Close" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
