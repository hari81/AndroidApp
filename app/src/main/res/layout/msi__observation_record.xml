<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_weight="3"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Left Side -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <!-- title + camera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/MSI_title_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text=""
                android:gravity="center"/>
            <ImageView
                android:id="@+id/MSI_img_left"
                android:src="@mipmap/camera"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"/>
        </LinearLayout>
        <EditText
            android:id="@+id/MSI_input_left"
            android:minWidth="100dp"
            android:background="@drawable/rounded_edittext_gray"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
    </LinearLayout>

    <!-- Right Side -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <!-- title + camera -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/MSI_title_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text=""
                android:gravity="center"/>
            <ImageView
                android:id="@+id/MSI_img_right"
                android:src="@mipmap/camera"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"/>
        </LinearLayout>
        <EditText
            android:id="@+id/MSI_input_right"
            android:minWidth="100dp"
            android:background="@drawable/rounded_edittext_gray"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="150dp" />
    </LinearLayout>


</LinearLayout>
