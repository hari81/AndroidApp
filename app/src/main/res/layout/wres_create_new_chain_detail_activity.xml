<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Enter the component details"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ScrollView
            android:id="@+id/scroll_tbl_data"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="70dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- LINK -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:text="LINK"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:text=""/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Component Type"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Brand"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:text="Budget Life (hrs)"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Hours on Surface"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="match_parent"
                            android:text="Cost ($)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:src="@drawable/link"/>
                        <Spinner
                            android:id="@+id/link_component_type_spinner"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:minWidth="150dp"
                            android:spinnerMode="dialog"
                            android:background="@drawable/wres_dark_spinner_new_chain" />
                        <Spinner
                            android:id="@+id/link_brand_spinner"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:minWidth="150dp"
                            android:spinnerMode="dialog"
                            android:background="@drawable/wres_dark_spinner_new_chain" />
                        <EditText
                            android:id="@+id/link_budget_life"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                        <EditText
                            android:id="@+id/link_hrs_on_surface"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                        <EditText
                            android:id="@+id/link_cost"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- BUSHING -->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="60dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:textStyle="bold"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:text="BUSHING"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:text=""/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Component Type"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Brand"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:text="Budget Life (hrs)"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Hours on Surface"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="match_parent"
                            android:text="Cost ($)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:src="@drawable/bushing"/>
                        <Spinner
                            android:id="@+id/bushing_component_type_spinner"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:minWidth="150dp"
                            android:spinnerMode="dialog"
                            android:background="@drawable/wres_dark_spinner_new_chain" />
                        <Spinner
                            android:id="@+id/bushing_brand_spinner"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:minWidth="150dp"
                            android:spinnerMode="dialog"
                            android:background="@drawable/wres_dark_spinner_new_chain" />
                        <EditText
                            android:id="@+id/bushing_budget_life"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                        <EditText
                            android:id="@+id/bushing_hrs_on_surface"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                        <EditText
                            android:id="@+id/bushing_cost"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- SHOE -->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:minHeight="60dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:textStyle="bold"
                        android:text="SHOE"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:text=""/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Component Type"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Brand"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:text="Budget Life (hrs)"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Hours on Surface"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="match_parent"
                            android:text="Cost ($)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:src="@drawable/shoe"/>
                        <Spinner
                            android:id="@+id/shoe_component_type_spinner"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:minWidth="150dp"
                            android:spinnerMode="dialog"
                            android:background="@drawable/wres_dark_spinner_new_chain" />
                        <Spinner
                            android:id="@+id/shoe_brand_spinner"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:minWidth="150dp"
                            android:spinnerMode="dialog"
                            android:background="@drawable/wres_dark_spinner_new_chain" />
                        <EditText
                            android:id="@+id/shoe_budget_life"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                        <EditText
                            android:id="@+id/shoe_hrs_on_surface"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                        <EditText
                            android:id="@+id/shoe_cost"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent"
                            android:text=""/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Shoe Size"/>
                        <TextView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Grouser"/>
                        <TextView
                            android:visibility="invisible"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:text="Budget Life (hrs)"/>
                        <TextView
                            android:visibility="invisible"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:text="Hours on Surface"/>
                        <TextView
                            android:visibility="invisible"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="match_parent"
                            android:text="Cost ($)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="match_parent" />
                        <Spinner
                            android:id="@+id/shoe_size_spinner"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:minWidth="150dp"
                            android:spinnerMode="dialog"
                            android:background="@drawable/wres_dark_spinner_new_chain" />
                        <Spinner
                            android:id="@+id/shoe_grouser_spinner"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:minWidth="150dp"
                            android:spinnerMode="dialog"
                            android:background="@drawable/wres_dark_spinner_new_chain" />
                        <EditText
                            android:visibility="invisible"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                        <EditText
                            android:visibility="invisible"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="6"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                        <EditText
                            android:visibility="invisible"
                            android:layout_marginRight="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="match_parent"
                            android:background="@drawable/wres_text_level"
                            android:gravity="center_vertical|left"
                            android:inputType="number"/>
                    </LinearLayout>

                </LinearLayout>

            </TableLayout>
        </ScrollView>
        <include
            layout="@layout/wres_bottom_bar">
        </include>
        <Button
            android:id="@+id/main_table_next"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/uc_white"
            android:backgroundTint="@color/login_button_red"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Done"
            android:onClick="saveNewChainComponent"/>
    </RelativeLayout>

</LinearLayout>
