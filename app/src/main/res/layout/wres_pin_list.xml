<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/wres_link_auto"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/uc_black"
        android:text="10"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:minWidth="100dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/wres_link_level"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/wres_text_level"
            android:gravity="center_vertical|left"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:minWidth="170dp"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/wres_link_condition"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:minWidth="150dp"
            android:spinnerMode="dialog"
            android:background="@drawable/wres_dark_spinner" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/wres_pin_image"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_a_photo_black_24dp"/>
        <ImageView
            android:id="@+id/wres_pin_comment"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_black_24dp"/>
    </LinearLayout>
</LinearLayout>
